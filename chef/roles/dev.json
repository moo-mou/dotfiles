{
    "nginx": {
        "domains": [
            {
                "root_url": "ohsloth.com",
                "servers": [
                    {
                        "name": "api",
                        "upstream": "api",
                        "locations": [
                            {
                                "path": "/svc",
                                "upstream": "svc"
                            }
                        ]
                    },
                    {
                        "name": "app",
                        "upstream": "app",
                        "locations": [
                            {
                                "path": "/dist",
                                "root": "/var/app/ohsloth"
                            }
                        ]
                    },
                    {
                        "name": "www",
                        "root": "/var/www/ohsloth"
                    }
                ],
                "subdomains": [
                    "app",
                    "api",
                    "www"
                ],
                "upstreams": [
                    {
                        "address": "localhost:3000",
                        "name": "api"
                    },
                    {
                        "address": "localhost:5005",
                        "name": "app"
                    },
                    {
                        "address": "localhost:8080",
                        "name": "svc"
                    }
                ]
            }
        ],
        "user": "me+letsencrypt@moomou.com"
    },
    "run_list": [
        "recipe[base::default]",
        "recipe[ssh_tunnel::default]",
        "recipe[nginx::default]"
    ],
    "ssh_tunnel": {
        "configs": [
            {
                "command": "ssh -i /ssh/do_rsa do@52.27.105.224 -L 5005:ec2-52-27-105-224.us-west-2.compute.amazonaws.com:5000",
                "name": "slothdb_app"
            },
            {
                "command": "ssh -i /ssh/do_rsa do@52.27.105.224 -L 3000:ec2-52-27-105-224.us-west-2.compute.amazonaws.com:3000",
                "name": "slothdb_api"
            }
        ]
    }
}
