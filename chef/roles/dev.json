{
    "nginx": {
        "domains": [
            {
                "root_url": "ohsloth.com",
                "servers": [
                    {
                        "name": "lab",
                        "upstream": "lab"
                    },
                    {
                        "name": "api",
                        "upstream": "api"
                    },
                    {
                        "name": "app",
                        "upstream": "app",
                        "locations": [
                            {
                                "path": "/dist",
                                "root": "/var/app/ohsloth"
                            }
                        ]
                    },
                    {
                        "name": "www",
                        "root": "/var/www/ohsloth"
                    }
                ],
                "subdomains": [
                    "api",
                    "app",
                    "lab",
                    "www"
                ],
                "upstreams": [
                    {
                        "address": "localhost:3000",
                        "name": "api"
                    },
                    {
                        "address": "localhost:8080",
                        "name": "svc"
                    },
                    {
                        "address": "localhost:2223",
                        "name": "lab"
                    }
                ]
            }
        ],
        "user": "me+letsencrypt@moomou.com"
    },
    "run_list": [
        "recipe[box::default]",
        "recipe[supervisor_job::default]",
        "recipe[nginx::default]"
    ],
    "supervisor_job": {
        "configs": [
            {
                "command": "autossh -M 20000 -L 8888:localhost:8888 box",
                "name": "box_lab"
            }
        ]
    },
    "box": {
        "username": "root"
    }
}
