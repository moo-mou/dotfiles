[color]
    ui = true
[credential]
    helper = cache --timeout=36000
[alias]
    st = status
    ci = commit
    co = checkout
    df = diff
    lg = log -p
    sub = submodule
    bb = branch
    switch = !legit switch \"$@\"
    sprout = !legit sprout \"$@\"
    unpublish = !legit unpublish \"$@\"
    harvest = !legit harvest \"$@\"
    sync = !legit sync \"$@\"
    pub = !legit publish \"$@\"
    graft = !legit graft \"$@\"
[user]
    name = paul
    email = paul@smyte.com
[core]
    editor = /usr/bin/vim
	excludesfile = /home/paul/.gitignore
[grep]
    linenumber = true
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
